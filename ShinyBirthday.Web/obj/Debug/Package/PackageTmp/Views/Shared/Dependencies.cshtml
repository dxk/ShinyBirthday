    //自动查询问题
    $.fn.autoSearchIssueByProject = function (options) {
        options = $.extend({
            url: options.url,
            hidde: options.hidde,
            projectId: options.projectId
        }, options || {});

        var self = $(this);

        self.autocomplete({
            minLength: 0,
            source: function (request, response) {
                var projectId = $(options.projectId).val();
                if (projectId) {
                    $.getJSON(options.url,
                              { ProjectId: projectId, term: request.term },
                             function (result) {
                                 response(result, request.term);
                             });
                }
            },
            focus: function (event, ui) {
                self.val(ui.item.No);
                return false;
            },
            select: function (event, ui) {
                self.val(ui.item.Title);
                $(options.hidde).val(ui.item.Id);
                return false;
            }
        }).data("autocomplete")._renderItem = function (ul, item) {
            return $("<li></li>").data("item.autocomplete", item)
                          .append("<a>" + "WBSNo：" + item.No + "&nbsp;&nbsp;" +
                                     "名称：" + item.Title + "</a>")
                             .appendTo(ul);
        };
        self.keyup(function () {
            var self = $(this);
            if (!self.val()) {
                $(options.hidde).val("");
            }
        })
    };

