<body style="min-width: 1000px;">
    <script type="text/javascript">
        var idex = 0;
        function om() {
            $("#bnabc" + idex).hide(1000);
            idex++;
            if (idex > 3) {
                idex = 0;
            }
            $("#bnabc" + idex).show(2000);
        }
    </script>
    <div class="top" id="bnabcFather" onmousedown="om()" style="min-width: 1000px; cursor: pointer;">
        @*<div class="">
        </div>*@
        <div class="userBox">
            <a href="javascript:$('#AddTopMessageDiv').show(2000);" title="展示我的祝福！">>></a>
        </div>
        <div id="bnabc0" class="breadNav0" style="font-size: 30px;">
            @Model.TopMessage[0]
            @RenderSection("SiteMap", false)
        </div>
        <div id="bnabc1" class="breadNav1" style="font-size: 30px; display: none;">
            @Model.TopMessage[1]
        </div>
        <div id="bnabc2" class="breadNav2" style="font-size: 30px; display: none;">
            @Model.TopMessage[2]
        </div>
        <div id="bnabc3" class="breadNav3" style="font-size: 30px; display: none;">
            @Model.TopMessage[3]
        </div>
    </div>
    <div class="mainbody" style="min-width: 1000px; width: 100%;">
        <table class="tContainer" border="0px" align="center" style="width: 98%; border-collapse: collapse;
            margin: 0px auto; position: relative; display: block;">
            <tr>
                <td colspan="2" valign="top" style="height: 38px;">
                    <div class="articleTitle">
                        <div class="bg">
                            <div style="width: 790px; font-size: 15px; color: infobackground;">
                                @RenderSection("SitePageName", false)
                            </div>
                        </div>
                        <div class="lt">
                            &nbsp;</div>
                        <div class="rt">
                            &nbsp;</div>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2" class="articleLt" style="padding: 0px;">
                    <div class="articleRt" style="padding: 2px; background-color: transparent">
                    </div>
                </td>
            </tr>
            <tr>
                <td valign="top" class="articleLt" width="10000px;">
                    <div style="min-height: 491px; background-image: url(../../Content/Images/ContantBack.jpg);border-radius:5px;">
                        @RenderBody()
                    </div>
                </td>
                <td valign="top" class="articleRt" style="padding-right: 2px;">
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="articleFloor">
                        <div class="bg">
                        </div>
                        <div class="lt">
                            &nbsp;</div>
                        <div class="rt">
                            &nbsp;</div>
                    </div>
                </td>
            </tr>
        </table>
        <div class="floorTop" style="border-collapse: collapse; color: Green; min-width: 1000px;
            position: relative;">
            <marquee behavior="scroll" direction="left" style="padding-top: 20px; margin: 0px 15px"
                loop="-1" scrollamount="2" scrolldelay="0" onmouseout="this.start()" onmouseover="this.stop()">
        我们遇见这个人，遇见那个人，却一直想念不该想念的人...
        </marquee>
        </div>
        <div title="由于某种原因IE浏览器显示可能有BUG，请使用chrome内核浏览器打开该网站，谢谢！" class="floorText" style="border-collapse: collapse; min-width: 1000px; position: relative;">
            <p>
                <a target="_blank" href="http://user.qzone.qq.com/418493429">访问Shiny的空间</a> | <a
                    target="_blank" href="http://user.qzone.qq.com/418493429">联系Shiny</a> | <a class="serviceLink"
                        href="http://user.qzone.qq.com/653693115">疑问中心</a> &nbsp;&nbsp;&nbsp;
                        <a href="http://shinykang.github.com/">访问</a>量：
                @{
                    var img4 = (Model.Visitorvolume % 10).ToString() + ".png";
                    var img3 = (Model.Visitorvolume % 100 / 10).ToString() + ".png";
                    var img2 = (Model.Visitorvolume % 1000 / 100).ToString() + ".png";
                    var img1 = (Model.Visitorvolume / 1000).ToString() + ".png";
                }
                <img src="../../Content/Images/Num/red_num_0 @img1" alt="烦请互相传达，为.鲜艳.祝福吧~" style="width: 10px;
                    height: 15px; padding: 0 0 0 0; margin: 0 0 0 0; position: absolute;" />
                <img src="../../Content/Images/Num/red_num_0 @img2" alt="烦请互相传达，为.鲜艳.祝福吧~" style="width: 10px;
                    height: 15px; padding: 0 0 0 8px; margin: 0 0 0 0; position: absolute;" />
                <img src="../../Content/Images/Num/red_num_0 @img3" alt="烦请互相传达，为.鲜艳.祝福吧~" style="width: 10px;
                    height: 15px; padding: 0 0 0 16px; margin: 0 0 0 0; position: absolute;" />
                <img src="../../Content/Images/Num/red_num_0 @img4" alt="烦请互相传达，为.鲜艳.祝福吧~" style="width: 10px;
                    height: 15px; padding: 0 0 0 24px; margin: 0 0 0 0; position: absolute;" />
            </p>
