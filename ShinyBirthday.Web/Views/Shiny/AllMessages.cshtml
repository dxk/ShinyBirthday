@{
    Layout = "";
}
@model ShinyBirthday.Web.Models.Shiny.AllMessageViewModel
<div style="">
    @{
        var i = 0;
        foreach (var item in Model.ListMessage)
        {
            i++;
        <span>@i , @item.Friender @item.Truename @item.Qq</span>
        <span>@item.Message </span>
        <br />
        }
    }
    @{
        for (int pi = 0; pi < Model.PageNos; pi++)
        {
            int pi_ = 1;
        <a href="../Shiny/AllMessages?pageNum=@pi">" " + @pi_ + " "</a>
        <span>-</span>
            pi_ = pi_ + 1;
        }
    }
</div>
